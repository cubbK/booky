{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "target": "es5",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
